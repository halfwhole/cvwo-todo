<table>
  <thead>
    <tr>
      <td><b>Complete</b></td>
      <td><b>Priority</b></td>
      <td><b>Content</b></td>
      <td><b>Tags</b></td>
    </tr>
  </thead>
  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.complete %></td>
        <td><%= todo.priority %></td>
        <td><%= todo.content %></td>
        <td><%= todo.tags %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Delete', todo_path(todo), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

